{
  "name": "vue-ssr-service",
  "version": "0.2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krmax44/vue-ssr-service.git"
  },
  "description": "A service for rendering Vue components on the server side.",
  "keywords": [
    "vue",
    "ssr",
    "microservice",
    "server-side-rendering"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "bin": "./dist/cli.js",
  "type": "module",
  "scripts": {
    "start": "bun run src/cli.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "prepack": "tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-validator": "^0.4.3",
    "commander": "^13.1.0",
    "hono": "^4.7.10",
    "pino": "^9.7.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bun": "^1.2.15",
    "@vitest/coverage-v8": "3.0.9",
    "bunup": "^0.7.6",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^17.5.6",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "semantic-release-gitmoji": "^1.6.8",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "vue": "^3.5.13",
    "vite": "^6"
  },
  "engines": {
    "bun": ">=1.2.15",
    "node": ">=22.0.0"
  },
  "prettier": {},
